{
  "name": "moicad-monorepo",
  "version": "0.1.0",
  "description": "Modern JavaScript CAD Platform - SDK, Landing Page, and Desktop App",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:sdk": "cd packages/sdk && npm run dev",
    "dev:landing": "cd packages/landing && npm run dev",
    "dev:desktop": "cd packages/desktop && npm run tauri:dev",
    "build:sdk": "cd packages/sdk && npm run build",
    "build:landing": "cd packages/landing && npm run build",
    "build:desktop": "cd packages/desktop && npm run tauri:build",
    "build:all": "npm run build:sdk && npm run build:landing && npm run build:desktop",
    "publish:sdk": "cd packages/sdk && npm publish",
    "start:backend": "cd packages/landing && BACKEND_URL=http://localhost:42069 npm run dev",
    "test:sdk": "cd packages/sdk && npm test",
    "test:all": "npm run test:sdk && npm run build:all",
    "clean": "rm -rf packages/*/dist packages/*/out packages/*/node_modules",
    "install:all": "bun install && npm run install:sdk && npm run install:landing && npm run install:desktop",
    "install:sdk": "cd packages/sdk && npm install",
    "install:landing": "cd packages/landing && npm install",
    "install:desktop": "cd packages/desktop && npm install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moikas/moicad"
  },
  "keywords": [
    "cad",
    "3d",
    "modeling",
    "javascript",
    "typescript",
    "monorepo",
    "tauri",
    "nextjs",
    "openscad"
  ],
  "author": "moicad",
  "license": "MIT",
  "homepage": "https://moicad.moikas.com"
}