{
  "name": "moicad-monorepo",
  "version": "0.1.0",
  "description": "Modern JavaScript CAD Platform - SDK, Landing Page, and Desktop App",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "moicad dev",
    "dev:sdk": "cd packages/sdk && bun run dev",
    "dev:app": "cd packages/app && bun run dev",
    "dev:landing": "cd packages/landing && bun run dev",
    "dev:desktop": "cd packages/desktop && bun run tauri:dev",
    "build:sdk": "cd packages/sdk && bun run build",
    "build:app": "cd packages/app && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "build:landing": "cd packages/landing && bun run build",
    "build:desktop": "cd packages/desktop && bun run tauri:build",
    "build:all": "bun run build:sdk && bun run build:app && bun run build:cli",
    "cli:link": "cd packages/cli && bun link",
    "publish:sdk": "cd packages/sdk && npm publish",
    "start:backend": "cd packages/landing && BACKEND_URL=http://localhost:42069 bun run dev",
    "test:sdk": "cd packages/sdk && bun test",
    "test:all": "bun run test:sdk && bun run build:all",
    "clean": "rm -rf packages/*/dist packages/*/out packages/*/node_modules packages/*/.next",
    "install:all": "bun install && bun run install:sdk && bun run install:app && bun run install:landing && bun run install:desktop",
    "install:sdk": "cd packages/sdk && bun install",
    "install:app": "cd packages/app && bun install",
    "install:landing": "cd packages/landing && bun install",
    "install:desktop": "cd packages/desktop && bun install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moikas/moicad"
  },
  "keywords": [
    "cad",
    "3d",
    "modeling",
    "javascript",
    "typescript",
    "monorepo",
    "tauri",
    "nextjs",
    "openscad"
  ],
  "author": "moicad",
  "license": "MIT",
  "homepage": "https://moicad.moikas.com"
}
