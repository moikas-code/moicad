{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "moicad",
  "version": "0.1.0",
  "identifier": "com.moicad.app",
  "build": {
    "beforeBuildCommand": "cd frontend && npm run build",
    "beforeDevCommand": "bun run dev:all",
    "devUrl": "http://localhost:3001",
    "frontendDist": "../frontend/out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "moicad - OpenSCAD Clone",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "resources": [
      "../backend/**/*",
      "../wasm/pkg/**/*",
      "../shared/**/*"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
