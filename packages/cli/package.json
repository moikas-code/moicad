{
  "name": "@moicad/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "Modern JavaScript CAD Platform - CLI launcher",
  "bin": {
    "moicad": "./dist/index.js"
  },
  "files": [
    "dist",
    "app-bundle"
  ],
  "scripts": {
    "prebuild": "bash scripts/bundle-app.sh",
    "build": "bun build src/index.ts --target=bun --outdir=dist && chmod +x dist/index.js",
    "build:quick": "bun build src/index.ts --target=bun --outdir=dist && chmod +x dist/index.js",
    "dev": "bun src/index.ts",
    "test": "bash scripts/test-cli.sh",
    "prepublishOnly": "bash scripts/pre-publish-check.sh"
  },
  "dependencies": {
    "@moicad/sdk": "workspace:*",
    "open": "11.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
